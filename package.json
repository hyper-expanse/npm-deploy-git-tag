{
  "author": {
    "name": "Hutson Betts",
    "email": "hutson@hyper-expanse.net",
    "url": "https://gitlab.com/hutson"
  },
  "bin": "./src/cli.js",
  "bugs": "https://gitlab.com/hyper-expanse/open-source/npm-deploy-git-tag/issues",
  "description": "Deploy a package to an `npm`-compatible registry using the latest git tag from that package's repository.",
  "engines": {
    "node": ">=6.9.0"
  },
  "files": [
    "src/**/!(*.spec).js"
  ],
  "homepage": "https://gitlab.com/hyper-expanse/open-source/npm-deploy-git-tag#readme",
  "keywords": [
    "npm",
    "deploy",
    "git",
    "tag"
  ],
  "license": "Apache-2.0",
  "main": "src/index.js",
  "mocha": {
    "checkLeaks": true,
    "fullTrace": true,
    "inlineDiffs": true,
    "recursive": true,
    "reporter": "progress"
  },
  "name": "@hutson/npm-deploy-git-tag",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/cli.js",
      "src/**/*.spec.js",
      "src/**/*.mock.js"
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":maintainLockFilesWeekly",
      ":rebaseStalePrs",
      ":automergeDigest",
      ":gitSignOff",
      ":automergeMinor",
      ":preserveSemverRanges"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/hyper-expanse/open-source/npm-deploy-git-tag.git"
  },
  "scripts": {
    "test": "semistandard 'src/**/*.js' && nyc mocha src/**/*.spec.js"
  },
  "version": "1.0.0",
  "dependencies": {
    "@hutson/set-npm-auth-token-for-ci": "^2.1.0",
    "bluebird": "^3.5.0",
    "commander": "^2.9.0",
    "git-latest-semver-tag": "^1.0.2",
    "is-scoped": "^1.0.0",
    "read-pkg": "^4.0.0",
    "semver": "^5.6.0",
    "shelljs": "^0.8.0",
    "write-pkg": "^3.0.1"
  },
  "devDependencies": {
    "@hutson/conventional-changelog-config": "^2.0.0",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "debug": "^4.0.0",
    "mocha": "^6.0.0",
    "nock": "^10.0.0",
    "npm-publish-git-tag": "^3.0.0",
    "nyc": "^13.0.0",
    "semantic-release-gitlab": "^7.0.0",
    "semistandard": "^13.0.1",
    "sinon": "^7.0.0",
    "sinon-chai": "^3.0.0",
    "tmp": "^0.0.33"
  }
}
